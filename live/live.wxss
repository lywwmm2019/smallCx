.container{width:100%;height:100%; background:#f5f5f5;}
.top_vedio{padding:0rpx;margin:0rpx;border-bottom:#e0e0e0 1px solid; background:#fff; }
.board{display:flex;flex-direction:row;padding:0rpx;margin:0rpx;}
.board-item{flex:2;  display: flex; cursor:pointer;width:100%;}
.boarditem_img{width:90rpx;height:30rpx;}
.board-item text{flex:1;padding:30rpx 0rpx 30rpx 90rpx;font-family:"Microsoft YaHei"; font-size:20px;color:#999;}
.board-item text.red{flex:1;font-family:"Microsoft YaHei"; font-size:20px;color:#ed3f48; background:url(../images/slide.png) no-repeat bottom center; }

.livevideo{width:100%;}
.vedio-play{padding:0rpx;margin:0rpx;width:100%;}
.vedio-play-img{width:690rpx;height:345rpx;margin:0 auto;padding-top:1.1rpx;display:block;}
.vedio-play-item{width:100%;overflow:hidden;clear:both;}
.vedio-play-item text{float:left;padding:30rpx 0rpx 30rpx 10rpx;font-family:"Microsoft YaHei"; font-size:14px;color:#222;display:block;}
.vedio-play-item-textright{float:right;font-family:"Microsoft YaHei"; font-size:14px;color:#666;padding:30rpx 30rpx 0rpx 60rpx;}
.studio, .Exquisitevideo, .investclass{width:100%;border-bottom:#e0e0e0 1px solid;border-top:#e0e0e0 1px solid;margin-top:30rpx;background:#fff;}
.studio-item, .Exquisitevideo-item, .investclass-item{display:flex; background:#fff;border-bottom:#e0e0e0 1px solid;}
.studio-item-title, .Exquisitevideo-item-title, .investclass-item-title{flex:1;  padding:20rpx 0rpx;font-family:"Microsoft YaHei"; font-size:16px;color:#222;margin:0 0 0 30rpx;}
.studio-item-img, .Exquisitevideo-item-img, .investclass-item-img{width:24rpx;height:40rpx;padding:20rpx;}
.studio-content-whole, .Exquisitevideo-content-whole, .investclass-content-whole{display:flex;flex-direction:column;}
.studio-content, .Exquisitevideo-content, .investclass-content{width:92%;display:flex;flex:2;flex-direction:row;margin:30rpx auto;background:#fff;}
.studio-content-left, .Exquisitevideo-content-left, .investclass-content-left{width:48%;}
.studio-content-leftimg, .Exquisitevideo-content-leftimg, .investclass-content-leftimg{width:336rpx;height:188rpx;}
.studio-content-leftp1, .Exquisitevideo-content-leftp1, .investclass-content-leftp1{font-family:"Microsoft YaHei"; font-size:14px;color:#222;display:block;}
.studio-content-leftp2, .Exquisitevideo-content-leftp2, .investclass-content-leftp2{font-family:"Microsoft YaHei"; font-size:12px;color:#666;}

.dakastudio{ background:#f5f5f5;width:100%;}
.dakastudio .item {width:100%;padding:0.5rem;display:flex;border-bottom:#edecea 1px solid;position:relative; background:#fff;}
.dakastudio .item .item-img {width:336rpx;height:188rpx;}
.dakastudio .item-text {width:12.5rem;padding-left:0.5rem;}
.dakastudio .item-text .list-title {font-size:15px;color:#474541;padding-top:0.1rem}
.dakastudio .item-text .list-type {font-size:13px;color:#777573;padding-top:20rpx;}
.dakastudio .item-text .list-word {font-size:12px;color:#949290;padding-top:20rpx;display:block;-webkit-line-clamp:4;display:-webkit-box;-webkit-box-orient:vertical;overflow:hidden;}
.dakastudio .item-text .list-icon {font-size:12px;color:#5a9bf5;  padding: 0rpx; margin-top:20rpx;}

