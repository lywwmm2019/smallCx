
.shadow{
    width:92%;
    height:40rpx;
    background:#f5f5f5;
    border-bottom: 1px solid #e0e0e0;
    padding: 20rpx 4%;
}
.clock{
    width:8rpx;
    height:40rpx;
    position: relative;
    float:left;
}
.shadow text{
    font-family: 'Microsoft Yahei';
    font-size:30rpx;
    color:#222222;
    padding: 0 3%;
    line-height: 40rpx;
}
.app_download{
    width:92%;
    height:70rpx;
    position:relative;
    padding: 20rpx 4%;
    border-bottom: 1px solid #e0e0e0;
}
.icon{

    width:45%;
    height:70rpx;
    position: relative;
    float: left;
}
.icon text{
    position: relative;
    float: left;
    padding: 0 15rpx;
    font-family: 'Microsoft Yahei';
    font-size:29rpx;
    color:#666666;
    padding: 0 3%;
    line-height: 70rpx;
}
.pic{
    width:90rpx;
    height:70rpx;
    position: relative;
    float: left;
}
.download_btn{
    width:55%;
    height:70rpx;
    position: relative;
    float: right;
}
.download_btn text{
    position: relative;
    float: left;
    font-family: 'Microsoft Yahei';
    font-size:29rpx;
    color:#666666;
    padding: 0 3%;
    line-height: 70rpx;
    text-align: right;
    width:70%;  
}
.down{
    position: relative;
    float: right;
    border:1px solid #ed3f48;
    border-radius: 10rpx;
    font-family: 'Microsoft Yahei';
    font-size:29rpx;
    color:#ed3f48;
    padding: 5rpx 15rpx;
    margin-top:10rpx;   
}

